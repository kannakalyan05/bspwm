#!/bin/bash

# Notify
notify_user() {
	notify-send "$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"
}

# Increase Volume
inc_volume() {
	wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+ && notify_user
}

# Decrease Volume
dec_volume() {
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && notify_user
}

# Toggle Mute
toggle_mute() {
  	wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && notify_user
}


# Execute accordingly
if [[ "$1" == "--inc" ]]; then
	inc_volume
elif [[ "$1" == "--dec" ]]; then
	dec_volume
elif [[ "$1" == "--toggle" ]]; then
	toggle_mute
else
  echo "Available options: --inc --dec --toggle"
fi
